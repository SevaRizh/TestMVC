
@model Testing_123.Models.Numberses

@{
    ViewBag.Title = "Index";
    int i = 0; int j = 0; int k = 0;    //нумерация массивов для адекватного подсчета в контроллере

    //создание списков select'ов
    List<SelectListItem> BuildTrainUnit = Testing_123.Models.Numberses.BuildTrainUnit;      //для уровней обучающих зданий
    List<SelectListItem> RealTime = Testing_123.Models.Numberses.RealTime;                  //для времени обучени час/сутки/неделя/месяц/год
    List<SelectListItem> WarriorType = Testing_123.Infrastructure.Gallic.WarriorType;       //тип войск для казарм
    List<SelectListItem> HorseType = Testing_123.Infrastructure.Gallic.HorseType;           //тип войск для конюшен
    List<SelectListItem> MechanismType = Testing_123.Infrastructure.Gallic.MechanismType;   //тип войск для мастерских
    List<SelectListItem> ServerType = Testing_123.Models.Numberses.ServerType;              //для типа сервера

}

<h2>Index</h2>

@using (Html.BeginForm())
{
    <table width="100%" border="0" cellpadding="1" cellspacing="0">
        <tr>
            <td valign="top" align="left">
                <div>
                    <table width="80%" border="1" bordercolor="blue">
                        <tr>
                            <td>
                                @Html.DropDownListFor(x => x.serverType, new SelectList(ServerType, "Value", "Text"))
                                @Html.EditorFor(x => x.timeNum)
                                @Html.DropDownListFor(x => x.time, new SelectList(RealTime, "Value", "Text"))
                            </td>
                        </tr>
                    </table>

                    <br />
                    <table width="80%" border="1" bordercolor="green">
                        <tr>
                            <td>
                                <div>
                                    @Html.DropDownListFor(x => x.ValKaz[i], new SelectList(BuildTrainUnit, "Value", "Text"))
                                    @Html.DropDownListFor(x => x.TypeKaz[i], new SelectList(WarriorType, "Value", "Text"))
                                    @{i++;} <br />
                                    @Html.DropDownListFor(x => x.ValKaz[i], new SelectList(BuildTrainUnit, "Value", "Text"))
                                    @Html.DropDownListFor(x => x.TypeKaz[i], new SelectList(WarriorType, "Value", "Text"))
                                    @{i++;} <br />
                                    @Html.DropDownListFor(x => x.ValKaz[i], new SelectList(BuildTrainUnit, "Value", "Text"))
                                    @Html.DropDownListFor(x => x.TypeKaz[i], new SelectList(WarriorType, "Value", "Text"))
                                    @{i++;} <br />
                                </div>
                            </td>
                            <td>
                                <div>
                                    @Html.DropDownListFor(x => x.ValKon[j], new SelectList(BuildTrainUnit, "Value", "Text"))
                                    @Html.DropDownListFor(x => x.TypeKon[j], new SelectList(HorseType, "Value", "Text"))
                                    @{j++;} <br />
                                    @Html.DropDownListFor(x => x.ValKon[j], new SelectList(BuildTrainUnit, "Value", "Text"))
                                    @Html.DropDownListFor(x => x.TypeKon[j], new SelectList(HorseType, "Value", "Text"))
                                    @{j++;} <br />
                                    @Html.DropDownListFor(x => x.ValKon[j], new SelectList(BuildTrainUnit, "Value", "Text"))
                                    @Html.DropDownListFor(x => x.TypeKon[j], new SelectList(HorseType, "Value", "Text"))
                                    @{j++;} <br />
                                </div>
                            </td>
                            <td>
                                <div>
                                    @Html.DropDownListFor(x => x.ValMast[k], new SelectList(BuildTrainUnit, "Value", "Text"))
                                    @Html.DropDownListFor(x => x.TypeMast[k], new SelectList(MechanismType, "Value", "Text"))
                                    @{k++;} <br />
                                </div>
                            </td>
                        </tr>
                    </table>

                    <br />
                    <table width="80%" border="1" bordercolor="red">
                        <tr>
                            <td>1 "@Html.ValueFor(u => u.Unit1)"</td>
                            <td>2 "@Html.ValueFor(u => u.Unit2)"</td>
                            <td>3 "@Html.ValueFor(u => u.Unit3)"</td>
                            <td>4 "@Html.ValueFor(u => u.Unit4)"</td>
                            <td>5 "@Html.ValueFor(u => u.Unit5)"</td>
                            <td>6 "@Html.ValueFor(u => u.Unit6)"</td>
                            <td>7 "@Html.ValueFor(u => u.Unit7)"</td>
                            <td>8 "@Html.ValueFor(u => u.Unit8)"</td>
                        </tr>
                    </table>

                    <div>
                        <br />
                        <input type="submit" />
                    </div>
                </div>
            </td>
            <td valign="top" align="right">
                <div>
                    <table border="1">
                        <tr>
                            <td>одинарная</td>
                        </tr>
                        <tr>
                            <td>дерево</td>
                            <td>@Html.ValueFor(u => u.SumLuValue)</td>
                        </tr>
                        <tr>
                            <td>глина</td>
                            <td>@Html.ValueFor(u => u.SumClValue)</td>
                        </tr>
                        <tr>
                            <td>железо</td>
                            <td>@Html.ValueFor(u => u.SumIrValue)</td>
                        </tr>
                        <tr>
                            <td>кроп</td>
                            <td>@Html.ValueFor(u => u.SumCrValue)</td>
                        </tr>
                        <tr>
                            <td>унирес</td>
                            <td>@Html.ValueFor(u => u.SumSumValue)</td>
                        </tr>
                        <tr>
                            <td>кропожор</td>
                            <td>@Html.ValueFor(u => u.SumExpend)</td>
                        </tr>
                        <tr>
                            <td>атака</td>
                            <td>@Html.ValueFor(u => u.SumAtack)</td>
                        </tr>
                        <tr>
                            <td>защита от пехоты</td>
                            <td>@Html.ValueFor(u => u.SumPDef)</td>
                        </tr>
                        <tr>
                            <td>защита от коницы</td>
                            <td>@Html.ValueFor(u => u.SumKDef)</td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
    </table>
}

<br />
<br />

<div>
    <div>
        <table width="30%" border="1" bordercolor="green" float="left">
            <tr><td>сводная таблица</td></tr>
            <tr>
                <td>счетчик для казармы</td>
                <td>@i</td>
            </tr>
            <tr>
                <td>счетчик для конюшни</td>
                <td>@j</td>
            </tr>
            <tr>
                <td>счетчик для мастерской</td>
                <td>@k</td>
            </tr>
            <tr>
                <td>Тест 1</td>
                <td>@ViewBag.test1</td>
            </tr>
            <tr>
                <td>Тест 2</td>
                <td>@ViewBag.test2</td>
            </tr>
            <tr>
                <td>Тест 3</td>
                <td>@ViewBag.test3</td>
            </tr>
        </table>
    </div>
</div>
